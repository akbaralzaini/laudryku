<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        tools:context=".userInterface.DetailOrderActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/laundrybg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-80dp"
            android:layout_marginTop="-30dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/backgroud" />
        <RelativeLayout
            android:id="@+id/top_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:contentDescription="@string/back_button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Order"
                android:textColor="@color/putih"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/profil_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_dashboard"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="16sp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama_laundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Order"
                android:textColor="@color/putih"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/id_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#ID3789"
                android:textColor="@color/putih"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="24dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/profil_main"
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius_top_white"
            android:padding="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Detail"
                android:textColor="@color/abuabu"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tanggal_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Mert 2010"
                android:layout_marginBottom="12dp"
                android:textColor="@color/abuabu"/>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="18dp"
            android:background="@drawable/shape_white_radius">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/total_bayar_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 78.000.00"
                android:gravity="right"
                android:textColor="@color/background"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>