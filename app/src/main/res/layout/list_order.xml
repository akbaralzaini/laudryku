<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="12dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="12dp"
    app:cardBackgroundColor="@color/putih">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_order"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/iconmachine"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">
            <TextView
                android:id="@+id/nama_pemesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Orang Mesan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/bayangan"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/tanggal_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 September 2020"
                android:textColor="@color/abuabu"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/total_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 35.000"
                android:layout_marginTop="8dp"
                android:textColor="@color/bayangan"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/status_order"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/done"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Detail Pesanan"
                android:textColor="@color/background"
                android:layout_gravity="right"
                android:gravity="bottom"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>