<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_margin="12dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="12dp"
    android:background="@drawable/shape_radius_white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/iconthsirt"
            android:padding="8dp"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/textNotifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laundry Andy Prayogo pada 22 September 2020 dengan jumlah sebesar Rp. 50.000 Selesai Hari ini"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>